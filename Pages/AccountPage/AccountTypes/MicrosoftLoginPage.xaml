<ui:Page x:Class="LMC.Pages.AccountPage.AccountTypes.MicrosoftLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:local="clr-namespace:LMC.Pages.AccountPage.AccountTypes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="账号管理 -> 添加账号 -> 微软账号">
    <ScrollViewer>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="30">
            <TextBlock Text="授权代码流相对自动化，但在部分设备上可能不支持。&#13;设备代码流相对麻烦(但不多)，但是大部分设备上都支持。&#13;建议在陌生/公共的设备上使用设备代码流登录，随后在手机等自己的设备上打开链接输入授权码完成登录操作，以保护账号安全。" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>
            <ikw:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Spacing="30">
                <Button VerticalAlignment="Bottom" Content="上一步" Click="Button_Click"/>
                <Button VerticalAlignment="Bottom" Content="以授权代码流登录" Click="Button_Click_1"/>
                <Button VerticalAlignment="Bottom" Content="以设备代码流登录" Click="Button_Click_2"/>
            </ikw:SimpleStackPanel>
        </Grid>
    </ScrollViewer>
</ui:Page>
