<ui:Page x:Class="LMC.Pages.SettingsPage.JavaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:local="clr-namespace:LMC.Pages.SettingsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Java 管理">

    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="JavaDataTemplate" DataType="{x:Type local:JavaItem}">
                <ui:SettingsCard Description="{Binding Path=Java.Path}">
                    <ui:SettingsCard.Header>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="Java.Implementor"/>
                            <Binding Path="Java.Version"/>
                            <Binding Path="Java.Arch"/>
                        </MultiBinding>
                    </ui:SettingsCard.Header>
                    <ui:SettingsCard.HeaderIcon>
                        <Binding Path="Icon"></Binding>
                    </ui:SettingsCard.HeaderIcon>
                </ui:SettingsCard>
            </DataTemplate>
        </Grid.Resources>
        <ui:ScrollViewerEx Margin="60, 30,60 ,45">
            <ikw:SimpleStackPanel Orientation="Vertical">
                <ui:SettingsExpander Header="Java 管理" x:Name="jse" ItemTemplate="{StaticResource JavaDataTemplate}">
                    <ikw:SimpleStackPanel Spacing="10" Orientation="Horizontal">
                        <Button Content="搜索 Java" Click="Search_Click"/>
                    </ikw:SimpleStackPanel>
                </ui:SettingsExpander>
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="60,30" Content="返回" Click="ButtonBase_OnClick"/>
    </Grid>
</ui:Page>
