<ui:Page x:Class="LMC.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:local="clr-namespace:LMC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="管理档案">
    <Grid Margin="60, 30">
        <ikw:SimpleStackPanel Orientation="Vertical">
            <ui:CommandBar x:Name="cb" DefaultLabelPosition="Right" HorizontalAlignment="Left">
                <ui:CommandBar.PrimaryCommands>
                    <ui:AppBarButton Label="安装版本" Click="ButtonBase_OnClick">
                        <ui:AppBarButton.Icon>
                            <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Download}"/>
                        </ui:AppBarButton.Icon>
                    </ui:AppBarButton>
                    <ui:AppBarButton Label="切换 .minecraft 文件夹">
                        <ui:AppBarButton.Icon>
                            <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Switch}"/>
                        </ui:AppBarButton.Icon>
                    </ui:AppBarButton>
                </ui:CommandBar.PrimaryCommands>
            </ui:CommandBar>
            <ikw:SimpleStackPanel Orientation="Vertical">
                <ui:SettingsCard IsClickEnabled="True" Header="1.20.1" Description="原版 1.20.1">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OEM}"/>
                    </ui:SettingsCard.HeaderIcon>
                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="5">
                        <Button Content="启动"/>
                        <Button Content="选择"/>
                    </ikw:SimpleStackPanel>
                </ui:SettingsCard>
                <ui:SettingsCard IsClickEnabled="True" Header="Hypixel" Description="原版 1.8.9">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OEM}"/>
                    </ui:SettingsCard.HeaderIcon>
                </ui:SettingsCard>
                <ui:SettingsCard IsClickEnabled="True" Header="1-14-4" Description="原版 1.14.4">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OEM}"/>
                    </ui:SettingsCard.HeaderIcon>
                </ui:SettingsCard>
            </ikw:SimpleStackPanel>
        </ikw:SimpleStackPanel>
    </Grid>
</ui:Page>
