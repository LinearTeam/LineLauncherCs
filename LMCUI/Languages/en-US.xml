<?xml version="1.0" encoding="UTF-8"?>
<Localization>
    <MainWindow>
        <NavItems>
            <LaunchPage>Launch</LaunchPage>
            <VersionManagePage>Version Management</VersionManagePage>
            <DownloadPage>Download</DownloadPage>
            <DownloadMinecraftPage>Download Game</DownloadMinecraftPage>
            <DownloadModPage>Download Mods</DownloadModPage>
            <AccountPage>Account Management</AccountPage>
            <SettingsPage>Settings</SettingsPage>
        </NavItems>
    </MainWindow>

    <Pages>
        <AccountPage>
            <Title>Account Management</Title>
            <AccountListExpander>
                <Header>Account List</Header>
                <Description>Accounts already stored in the launcher</Description>
                <NoAccountsDescription>There are currently no accounts. You can add a new account below</NoAccountsDescription>
                <AccountTypeSuffix>
                    <Microsoft>  (Microsoft Account)</Microsoft>
                    <Offline>  (Offline Account)</Offline>
                    <Authlib>  (Authlib Account)</Authlib>
                </AccountTypeSuffix>
                <CopyUuidText>  Copy UUID</CopyUuidText>
                <CopyUsernameText>  Copy Username</CopyUsernameText>
            </AccountListExpander>
            <AddAccountExpander>
                <Header>Add Account</Header>
                <Description>Add a new Microsoft, offline, or third-party Yggdrasil authentication server account</Description>
                <AddButtonText>  Add</AddButtonText>
            </AddAccountExpander>
            <AddAccountWizard>
                <Title>Add Account Wizard</Title>
                <CloseButton>Close</CloseButton>
                <PreviousButton>Previous</PreviousButton>
                <NextButton>Next</NextButton>
                <FinishButton>Finish</FinishButton>
                <Steps>
                    <IndexStep>
                        <Title>Select Account Type</Title>
                        <AccountTypes>
                            <Microsoft>
                                <Name>Microsoft Account</Name>
                                <Description>Can access servers with online-mode enabled</Description>
                            </Microsoft>
                            <Offline>
                                <Name>Offline Account</Name>
                                <Description>Can only access servers without online-mode enabled.</Description>
                            </Offline>
                            <Authlib>
                                <Name>Authlib Account</Name>
                                <Description>Can join servers using third-party Yggdrasil authentication.</Description>
                            </Authlib>
                        </AccountTypes>
                    </IndexStep>
                    <OfflineStep>
                        <Title>Add Offline Account</Title>
                        <Watermarks>
                            <GameId>Game ID...</GameId>
                            <UUID>UUID (optional, will be auto-generated if empty)</UUID>
                        </Watermarks>
                        <ValidationMessages>
                            <EmptyGameId>Please enter a Game ID!</EmptyGameId>
                            <InvalidUUID>Invalid UUID!</InvalidUUID>
                        </ValidationMessages>
                        <GameIdWarnStep>
                            <Title>Add Offline Account</Title>
                            <WarningMessage>Your Minecraft username should only contain numbers, letters, underscores, and be less than 16 characters. Otherwise, you may not be able to access single-player worlds or servers.</WarningMessage>
                            <Confirmation>Do you want to continue?</Confirmation>
                        </GameIdWarnStep>
                    </OfflineStep>
                    <MicrosoftStep>
                        <Title>Add Microsoft Account</Title>
                        <Content>Next, you will log in to Microsoft. After clicking "Next", you will be redirected to the login link and complete the Microsoft login in your browser. The launcher will then read the authorization code returned after login and perform identity verification.</Content>
                    </MicrosoftStep>
                    <MicrosoftOAuthStep>
                        <LinkMessage>Please click the button below to jump to the login page, then sign in using Microsoft account and authorize LMC to access your account.You must complete this step on the device where the launcher is running.</LinkMessage>
                        <StepMessage>({0} / {1}) {2}</StepMessage>
                        <ErrorMessage>Failed to log in, please check network or try proxy: {0}</ErrorMessage>
                        <NoMinecraftProfileMessage>Your Microsoft account is logged in and does not have Minecraft profile. Make sure you purchased the game and set your username at Minecraft.net.</NoMinecraftProfileMessage>
                        <CopyLinkButton>Copy Link</CopyLinkButton>
                        <OpenLinkButton>Open Login Page</OpenLinkButton>
                        <CompleteMessage>You have successfully logged in!Now click "Finish" to add your account to LMC.</CompleteMessage>
                    </MicrosoftOAuthStep>
                </Steps>
            </AddAccountWizard>
        </AccountPage>
        <SettingsPage>
            <Title>Settings</Title>
            <GameSettingsPageNav>
                <Header>Game Settings</Header>
                <Description>Settings related to game downloading, ​​launching, and more</Description>
            </GameSettingsPageNav>
            <LauncherSettingsPageNav>
                <Header>Launcher Settings</Header>
                <Description>Manage the behavior of the launcher, such as launcher themes, update policies, etc.</Description>
            </LauncherSettingsPageNav>
            <GameSettingsPage>
                <Title>Game Settings</Title>
                <JavaRuntime>
                    <Title>Java Runtime</Title>
                    <JavaListExpander>
                        <Header>Java list</Header>
                        <EmptyHeader>No Java found</EmptyHeader>
                        <Description>View all Java runtimes stored in the launcher</Description>
                        <JavaListItem>
                            <SelectButton>Select</SelectButton>
                            <Enabled>Enabled</Enabled>
                        </JavaListItem>
                    </JavaListExpander>
                    <ImportExpander>
                        <Header>Import Java</Header>
                        <Description>Import Java runtimes from your system into the list above</Description>
                        <Footer>
                            <SearchButton>Search for Java</SearchButton>
                        </Footer>
                        <ChooseJavaDialog>
                            <Title>Select Java Executable</Title>
                        </ChooseJavaDialog>
                        <StatusText>
                            <SearchProgress>{2} ({0} / {1})</SearchProgress>
                            <SearchSuccess>Search completed!</SearchSuccess>
                            <SearchFailed>Search failed: {0}</SearchFailed>
                            <AddSuccess>Added successfully!</AddSuccess>
                            <AddFailed>Error: {0}</AddFailed>
                        </StatusText>
                    </ImportExpander>
                    <AutoSelectExpander>
                        <Header>Auto-Select Java</Header>
                        <Description>Let the launcher automatically select the Java runtime required to launch the game (this will override manually selected Java)</Description>
                        <Footer>
                            <ToggleSwitchButton>
                                <OnContent>Enabled</OnContent>
                                <OffContent>Disabled</OffContent>
                            </ToggleSwitchButton>
                        </Footer>
                    </AutoSelectExpander>
                </JavaRuntime>
            </GameSettingsPage>
            <LauncherSettingsPage>
                <Title>Launcher Settings</Title>
                <AppearanceSettings>
                    <Title>Appearance Settings</Title>
                    <LanguageExpander>
                        <Header>Language Settings</Header>
                        <Description>Adjust the language used in the launcher interface. Restart the launcher is required.</Description>
                        <RestartTeachingTip>
                            <Title>Restart Confirmation</Title>
                            <Subtitle>Changing the language requires restarting the launcher to apply. Restart now?</Subtitle>
                            <CloseButtonText>Restart later</CloseButtonText>
                            <RestartButtonText>Restart now</RestartButtonText>
                        </RestartTeachingTip>
                    </LanguageExpander>
                </AppearanceSettings>
            </LauncherSettingsPage>
        </SettingsPage>

        <LaunchPage>
            <Title>Launch</Title>
            <WelcomeMessage>Welcome to Line Launcher</WelcomeMessage>
        </LaunchPage>

        <VersionManagePage>
            <Title>Version Management</Title>
        </VersionManagePage>
    </Pages>
    <Messages>
        <JavaManager>
            <SearchJava>
                <Progress>
                    <Variables>Searching environment variables</Variables>
                    <Registry>Searching registry (Windows only)</Registry>
                    <StandardPaths>Searching default Java installation paths</StandardPaths>
                    <MinecraftRuntime>Searching Java in Minecraft official launcher directory</MinecraftRuntime>
                    <CurrentDir>Searching Java in launcher directory</CurrentDir>
                </Progress>
            </SearchJava>
        </JavaManager>
        <AccountManager>
            <AddAccount>
                <Duplicate>This account already exists and cannot be added again</Duplicate>
                <Success>
                    <Title>Added successfully!</Title>
                    <Content>You have successfully added an {0} account, welcome back, {1}!</Content>
                </Success>
                <Failed>
                    <Title>Add Failed</Title>
                    <Content>Failed to add account: {0}</Content>
                </Failed>
            </AddAccount>
            <OAuth>
                <Steps>
                    <WaitForCode>
                        <Message>Waiting for user login</Message>
                    </WaitForCode>
                    <GetAccessToken>
                        <Message>Fetching access token</Message>
                    </GetAccessToken>
                    <XBLAuthorize>
                        <Message>Xbox Live Authentication</Message>
                    </XBLAuthorize>
                    <XSTSAuthorize>
                        <Message>XSTS Authentication</Message>
                    </XSTSAuthorize>
                    <MinecraftAuthorize>
                        <Message>Minecraft Authentication</Message>
                    </MinecraftAuthorize>
                    <ValidateMinecraft>
                        <Message>Validate Minecraft account</Message>
                    </ValidateMinecraft>
                </Steps>
            </OAuth>
        </AccountManager>
    </Messages>
    <Enums>
        <AccountType>
            <Offline>Offline</Offline>
            <Microsoft>Microsoft</Microsoft>
            <Authlib>Authlib</Authlib>
        </AccountType>
    </Enums>
</Localization>
