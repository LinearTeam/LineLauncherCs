<add:AddAccountStep xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:add="clr-namespace:LMCUI.Pages.AccountPage.AddAccount"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:i18n="clr-namespace:LMCUI.I18n"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="300"
             x:Class="LMCUI.Pages.AccountPage.AddAccount.Microsoft.MicrosoftOAuthStep">
    <StackPanel Orientation="Vertical" Spacing="3">
        <TextBlock Text="{i18n:I18nBinding Key=Pages.AccountPage.AddAccountWizard.Steps.MicrosoftStep.Title}" FontSize="20" FontWeight="Bold"/>
        <!-- <TextBlock Text=""/> -->
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Name="LoginStatusPanel" Spacing="3" IsVisible="False">
            <ui:ProgressRing Name="StatusProgRing" HorizontalAlignment="Center" Width="60" Height="60"/>
            <TextBlock Text="(1 / 6) 等待用户登录" Name="StepMessage"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Name="LinkPanel" Spacing="3" IsVisible="True">
            <TextBlock Text="{i18n:I18nBinding Key=Pages.AccountPage.AddAccountWizard.Steps.MicrosoftOAuthStep.LinkMessage}"/>
            <TextBlock Text=""/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
                <Button Content="{i18n:I18nBinding Key=Pages.AccountPage.AddAccountWizard.Steps.MicrosoftOAuthStep.CopyLinkButton}" Click="Button_CopyLink"/>
                <Button Content="{i18n:I18nBinding Key=Pages.AccountPage.AddAccountWizard.Steps.MicrosoftOAuthStep.OpenLinkButton}" Click="Button_OpenLink" Classes="accent"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Spacing="3" IsVisible="False" Name="CompletePanel">
            <TextBlock Text="{i18n:I18nBinding Key=Pages.AccountPage.AddAccountWizard.Steps.MicrosoftOAuthStep.CompleteMessage}" HorizontalAlignment="Center" TextWrapping="Wrap"  TextAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</add:AddAccountStep>
